import java.util.ArrayList; // import the ArrayList class

public class Consomateur extends Utilisateur {
    
        ArrayList<int> tabNote = new ArrayList<String>(); 
        private int note ;
        
        private String Nom ;
        private String Email  ;
        private String Adresse ;
        private int Telephone ;

        private int capTraitement;
        private String exploitation; 

//string ou array au choix
        private String TypeDechet ;
        
        
        
        
        public Consomateur () {
            
	        
        }

    //------------------- Methode
        public void newNote (int noteU){
            int totalNote;

            tabNote.add(noteU);
            for (int i = 0; i < tabNote.size(); i++) {
                totalNote += tabNote.get(i);
            }

            this.note= totalNote/tabNote.size();
        }
       

    //--------- getters
    
    public String getNom() {
        return Nom;
    } 

   
    public String getEmail() {
        return Email;
    } 
    
    public String getAdresse() {
        return Adresse;
    } 

    public int getTelephone() {
        return Telephone;
    } 

    
    
    
   
    //--------- setters
    
    public void setNom(String Nom) {
        this.Nom = Nom;
    }
    
    public void setEmail(String Email) {
        this.Email = Email;
    }

    public void setTelephone(int Telephone) {
        this.Telephone = Telephone;
    }

        
        
      

       
       
}

